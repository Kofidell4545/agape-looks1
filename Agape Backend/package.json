{
  "name": "agape-looks-backend",
  "version": "1.0.0",
  "description": "Production-grade modular backend for AGAPE LOOKS e-commerce platform",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit --coverage",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration --coverage",
    "test:e2e": "NODE_ENV=test jest --testPathPattern=e2e --coverage",
    "migrate:up": "node src/database/migrator.js up",
    "migrate:down": "node src/database/migrator.js down",
    "migrate:create": "node src/database/migrator.js create",
    "seed": "node src/database/seeder.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "node scripts/build.js",
  "docker:build": "docker build -t agape-looks-backend:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "logs": "docker-compose logs -f app",
    "healthcheck": "curl -f http://localhost:3000/healthz || exit 1"
  },
  "keywords": [
    "ecommerce",
    "backend",
    "rest-api",
    "nodejs",
    "postgresql",
    "redis",
    "paystack",
    "cloudinary"
  ],
  "author": "AGAPE LOOKS Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.14.0",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "redis": "^4.6.10",
    "resend": "^2.1.0",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
